<!-- 1.Vant搜索框 -->
<van-search
  value="{{ searValue }}"
  shape="round"
	background="#fafafa"
  placeholder="请输入搜索关键词"
  bind:click-input="onSearchClick"
/>

<!-- 2.轮播图的展示 -->
<swiper
  class="banner"
  circular
  indicator-dots
  style="height: {{bannerHeight}}px"
>
  <block wx:for="{{banners}}" wx:key="targetId">
    <swiper-item class="item">
      <image
        class="banner-image" 
        src="{{item.imageUrl}}" 
        mode="widthFix"
        bindload="onBannerImageLoad"
      />
    </swiper-item>
  </block>
</swiper>